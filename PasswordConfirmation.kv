<PasswordConfirmation>:
    BoxLayout:
        canvas:
            Color:
                rgba: .10, .10, .10, 1   
            Rectangle:
                pos: self.pos
                size: self.size
        orientation : 'vertical'


        BoxLayout:
            size_hint: 1, .07
            canvas:
                Color:
                    rgba: .7, .2, .7, .4   
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "horizontal"
            Backs:
                size_hint: .1, 1
                on_release: root.manager.current = 'Security'
                Image:
                    size: self.parent.size
                    stretch: True
                    y: self.parent.y + self.parent.height/2 - self.height/2
                    x: self.parent.x + self.parent.width/2 - self.width/2
                    source: 'back.png'

            BoxLayout:
                size_hint: .9, 1
                padding: 0, 0, 15, 0
                Label:
                    font_size: 20
                    text: ''
        Widget:
            size_hint: 1, .13

        BoxLayout:
            orientation : 'vertical'
            size_hint: 1, .2
            spacing: 20
            BoxLayout:
                size_hint: .75, .1
                pos_hint: {'center_x': .5} 
                font_size : 20
                BackgroundLabel:
                    id: lbl
                    text : ""
                    font_size : 60 
            BoxLayout:
                size_hint : 1, .1
                pos_hint: {'center_y': .8}
                Label:
                    id: status
                    pos_hint: {'center_y': .8}
                    font_size : 20
                    text: "подтвердите пароль"
        Widget:
            size_hint: 1, .1
  
        GridLayout:
            size_hint: 1, .4
            cols: 3
            rows: 4
            spacing: 7, 12
            Buttonnnnn:
                text: "1"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "2"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "3"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "4"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "5"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "6"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "7"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "8"
                on_press: root.add_point(self)
            Buttonnnnn:
                text: "9"
                on_press: root.add_point(self)
            
            Buttonnnnn:

            
                Image:
                    source: 'touch.png'
                    y: self.parent.y + self.parent.height/2 - 35/2 - 2.5
                    x: self.parent.x + self.parent.width/2 - 35/2
                    size: 35, 35

            Buttonnnnn:
                text: "0"
                on_press: root.add_point(self) 


            Buttonnnnn:
                on_press: root.del_point(self) 
                Image:
                    source: 'clean.png'
                    y: self.parent.y + self.parent.height/2 - 50/2
                    x: self.parent.x + self.parent.width/2 - 70/2 - 5
                    size: 70, 50
        Widget:
            size_hint: 1, .1

<BackgroundColor@Widget>:
    background_color: .20, .9, .19, 0
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>:
    background_normal : ''
    canvas.before: 
        Color:
            rgba: .50, .22, .49, .4

        RoundedRectangle:
            pos: self.pos             
            size: self.size             
            radius: [15] 
<Buttonnnnn@Button>:
    background_color:.10, .10, .10, 0
    font_size : 50
    font: "Leelawadee UI"
    canvas.before:        
        Color:             
            rgba: (.10, .10, .10, 1 ) if self.state=='normal' else (.07, .07, .07, 1 )  
        RoundedRectangle:
            pos: self.pos            
            size: self.size  

<Backs@Button>:
    background_color: 1, 1, 1, 0
    canvas.before:
        Color:
            rgba: (.7, .2, .7, 0) if self.state=='normal' else (.7, .2, .7, .122 )  
        Rectangle:
            pos: self.pos
            size: self.size