<Parameters>:
    BoxLayout:
        canvas:
            Color:
                rgba: .10, .10, .10, 1   
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 7
        orientation: "vertical"
        padding: 0, 0, 0, 10
        BoxLayout:
            size_hint: 1, .07
            canvas:
                Color:
                    rgba: .7, .2, .7, .4   
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "horizontal"
            Backs:
                size_hint: .1, 1
                on_release: root.manager.current = 'HomeScreen'
                Image:
                    size: self.parent.size
                    stretch: True
                    y: self.parent.y + self.parent.height/2 - self.height/2
                    x: self.parent.x + self.parent.width/2 - self.width/2
                    source: 'back.png'

            BoxLayout:
                size_hint: .9, 1
                padding: 0, 0, 15, 0
                Label:
                    font_size: 20
                    text: 'Параметры'

        Widget:
            size_hint: 1, .2

        BoxLayout:
            spacing: 20
            size_hint: 1, .5
            orientation: 'vertical'
            ButtonParameters:
                size_hint: .8, 1
                pos_hint: {'center_x': .5}
                text: 'Безопасность'
                on_release: root.manager.current = 'Security'
            ButtonParameters:
                size_hint: .6, 1
                pos_hint: {'right': .7}
                text: 'Нужна помощь?'
            ButtonParameters:
                size_hint: .6, 1
                pos_hint: {'right': .9}
                text: 'О приложении'
            ButtonParameters:
                size_hint: .8, 1
                pos_hint: {'center_x': .5}
                text: 'Выход'

        Widget:
            size_hint: 1, .23

<Backs@Button>:
    background_color: 1, 1, 1, 0
    canvas.before:
        Color:
            rgba: (.7, .2, .7, 0) if self.state=='normal' else (.7, .2, .7, .122 )  
        Rectangle:
            pos: self.pos
            size: self.size

<ButtonParameters@Button>:
    size: self.size
    background_color: .7, .2, .7, 0
    font_size : 25
    font: "Leelawadee UI"
    canvas.before:
        Color:
            rgba: (.7, .2, .7, .4 ) if self.state=='normal' else (.7, .2, .7, .122 )  
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: {20}