<PickPassword>:
    BoxLayout:
        canvas:
            Color:
                rgba: .10, .10, .10, 1   
            Rectangle:
                pos: self.pos
                size: self.size
        orientation : 'vertical'
        padding : 15, 75, 15, 50
        spacing : 10
        BoxLayout:
            orientation : 'vertical'
            padding : 0, 0, 0, 80
            size_hint: 1, .5
            spacing: 1
            Widget:
                size_hint: 1, .5
            BoxLayout:
                size_hint : 1, .3
                padding : 45, 0, 45, 0
                BackgroundLabel:
                    id: lbl
                    text : ""
                    font_size : 60 
            BoxLayout:
                padding : 0, 25, 0, 0
                size_hint : 1, .2
               
                Label:
                    id: status
                    pos_hint: {'center_y': .8}
                    font_size : 20
                    text: "придумайте пароль"
  
        GridLayout:
            size_hint: 1, .6
            cols: 3
            rows: 4
            spacing: 7, 12
            ButtonPick:
                text: "1"
                on_press: root.add_point(self)
            ButtonPick:
                text: "2"
                on_press: root.add_point(self)
            ButtonPick:
                text: "3"
                on_press: root.add_point(self)
            ButtonPick:
                text: "4"
                on_press: root.add_point(self)
            ButtonPick:
                text: "5"
                on_press: root.add_point(self)
            ButtonPick:
                text: "6"
                on_press: root.add_point(self)
            ButtonPick:
                text: "7"
                on_press: root.add_point(self)
            ButtonPick:
                text: "8"
                on_press: root.add_point(self)
            ButtonPick:
                text: "9"
                on_press: root.add_point(self)
            
            ButtonPick:
                Image:
                    source: 'touch.png'
                    y: self.parent.y + self.parent.height/2 - 35/2 - 2.5
                    x: self.parent.x + self.parent.width/2 - 35/2
                    size: 35, 35

            ButtonPick:
                text: "0"
                on_press: root.add_point(self) 


            ButtonPick:
                on_press: root.del_point(self) 
                Image:
                    source: 'clean.png'
                    y: self.parent.y + self.parent.height/2 - 50/2
                    x: self.parent.x + self.parent.width/2 - 70/2 - 5
                    size: 70, 50

<BackgroundColor@Widget>:
    background_color: .20, .9, .19, 0
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>:
    background_normal : ''
    canvas.before: 
        Color:
            rgba: .50, .22, .49, .4
        RoundedRectangle:
            pos: self.pos             
            size: self.size             
            radius: [15] 
<ButtonPick@Button>:
    background_color:.10, .10, .10, 0
    font_size : 50
    font: "Leelawadee UI"
    canvas.before:        
        Color:             
            rgba: (.10, .10, .10, 1 ) if self.state=='normal' else (.07, .07, .07, 1 )  
        RoundedRectangle:
            pos: self.pos            
            size: self.size             